<div class="container">
 <div class="row">
  <div class="m-5">
   <p class="text-center">ユーザープロフィール</p>
   <div class="border">
    <table class="table table-borderless">
     <tbody>
      <tr>
       <td>名前</td>
       <td><%= @user.name %></td>
      </tr>
      <tr>
       <td>メールアドレス</td>
       <td><%= @user.email %></td>
      </tr>
     </tbody>
    </table>
    <p class="text-center">
     <%= link_to "編集する",edit_user_path(@user.id),class:'btn btn-success' %>
    </p>
   </div>
  </div>
  
  <div class="m-5">
   <p class="text-center"><%= Date.current.strftime('%m月 %d日') %></p>
   <div class="border">
    <table class="table table-borderless">
     <tbody>
      <% @task.each do |task| %>
       <% unless task.complete %>
        <tr>
         <td><%= link_to "完了",complete_task_path(task.id),method: :patch %></td>
         <td><%= task.name %></td>
        </tr>
       <% end %>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</div>