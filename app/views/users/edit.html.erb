<div class="container">
 <div class="row">
  <h5 class="mt-5" style="color: lime;">ユーザー情報編集</h5>
 </div>
 
 <div class="row">
  <table class="table table-borderless mt-5 col-7 text-center mx-auto">
   <%= form_with model: @user,url: user_path(@user.id),method: :patch do |f| %>
    <tbody>
     <tr>
      <td style="color: lime;">名前</td>
      <td colspan="2"><%= f.text_field :name,size:"30",class:'border text-white',style:'background-color: black;' %></td>
     </tr>
     <tr>
      <td style="color: lime;">メールアドレス</td>
      <td colspan="2"><%= f.email_field :email,size:"30",class:'border text-white',style:'background-color: black;' %></td>
     </tr>
     <tr>
      <td></td>
      <td><%= f.submit "変更する",class:'btn btn-success' %></td>
      <td><%= link_to "退会する",withdrawal_user_path(@user.id),method: :patch,"data-confirm" => "本当に退会しますか？",class:'btn btn-danger' %></td>
     </tr>
    </tbody>
   <% end %>
  </table>
 </div>
</div>