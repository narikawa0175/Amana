<div class="container">
 <div class="row justify-content-center m-5">
  <%= form_with model: @task,url: task_path(@task.id),method: :patch do |f| %>
   
   <div class="form m-2">
    <%= f.text_field :name,class:'form-control border border-dark' %>
   </div>
   
   <div class="form m-2">
    <%= f.text_area :explanation,class:'form-control border border-dark',size:"60x10" %>
   </div>
   
   <div class="form m-2">
    <%= f.text_field :tag_name %>
    <% @task_tags.each do |tag| %>
     <%= tag.tag_name %>
    <% end %>
   </div>
   
   <div class="time text-center">
    <%= f.datetime_select :start_time %></br>
    <%= f.datetime_select :finish_time %>
   </div>
   
   <div class="text-center m-5">
    <%= f.submit "変更内容を確定する",class:'' %>
   </div>
  <% end %>
 </div>
</div>