<div class="container">
 <div class="row mt-5">
  <h5 class="mt-5" style="color: lime;">タスクを追加する</h5>
 </div>
 
 <div class="row justify-content-center">
  <%= form_with model: @task,url: tasks_path do |f| %>
   <div class="form m-2">
    <%= f.select :list_id, @list.map{|list| [list.name,list.id]},{include_blank: "--リストを選択--"},{class:'form-control border text-center'} %>
   </div>
   
   <div class="form m-2">
    <%= f.text_field :name,class:'form-control border text-center',:placeholder=> "何をしますか？　例:会議" %>
   </div>
   
   <div class="form m-2 text-center border" style="background-color: black;">
    <%= f.label :explanation, "MEMO",class:'text-white' %>
    <%= f.text_area :explanation,class:'form-control border',size:"40x5" %>
   </div>
   
   <div class="form m-2">
    <%= f.text_field :tag_name,class:'border text-white text-center',style:'background-color: black;',:placeholder=> "タグを追加" %>
   </div>
   
   <div class="time text-center text-white">
    <%= f.datetime_field :start_time,class:'border border-success' %>
    <%= f.datetime_field :finish_time,class:'border border-success' %>
   </div>
   
   <div class="text-center m-5">
    <%= f.submit "追加する",class:'btn btn-success' %>
   </div>
  <% end %>
 </div>
</div>