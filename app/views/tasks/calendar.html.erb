<div>
 <%= month_calendar events: @events do |date,events| %>
  <%= date.day %>
  
  <% events.first(3).each do |event| %>
   <div>
    <%= link_to edit_task_path(event.id) do %>
     <%= event.name %>(<%= event.start_time.strftime('%H:%M') %>~<%= event.finish_time.strftime('%H:%M') %>)
    <% end %>
   </div>
  <% end %>
 <% end %>
</div>