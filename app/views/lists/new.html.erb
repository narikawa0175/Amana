<div class="container">
 <div class="row m-5">
  <h4 class="m-5" style="color: lime;">リストを追加する</h4>
 </div>
 
 <div class="row justify-content-center">
  <%= form_with model: @list,url: lists_path do |f| %>
   <div class="form m-2">
    <%= f.text_field :name,class:'form-control border text-center',:placeholder=> "リスト名　例:仕事" %>
   </div>
   
   <div class="text-center m-2">
    <%= f.submit "追加する",class:'btn btn-success' %>
   </div>
  <% end %>
 </div>
</div>